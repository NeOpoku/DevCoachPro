{
  "name": "main",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "start": "npm run client:build && npm run server",
    "start:dev": "concurrently \"npm run server:dev\" \"wait-on tcp:3001 && npm run client:dev\"",

    "server": "npm start --prefix server",
    "server:dev": "npm run dev --prefix server",

    "install": "npm install --prefix server || true && npm install --prefix client || true",
    "client:build": "npm run build --prefix client",
    "client:dev": "npm run dev --prefix client",
    "build": "npm run build --prefix server",

    "seed": "npm run seed --prefix server",

    "render-build": "npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
